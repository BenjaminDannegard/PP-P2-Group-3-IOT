<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#e0ddc7"
    tools:context="com.inducesmile.chromecast.VideoActivity">

    <WebView
        android:id="@+id/web"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/disconnect"
        android:padding="20dp">

    </WebView>


    <LinearLayout
        android:id="@+id/disconnect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="10dp">

        <Button
            android:id="@+id/stop-cast"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:background="#A0522D"
            android:text="Close"/>

        <Button
            android:id="@+id/stand-by"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:background="#A0522D"
            android:text="Standby"/>

        <Button
            android:id="@+id/cast-btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:background="#A0522D"
            android:text="Cast"/>

    </LinearLayout>

</RelativeLayout>
